<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Material 3 with ActionBar) -->
    <style name="Theme.XPTranslateText" parent="Theme.Material3.DayNight">
        <!-- Darker brand colors (when Dynamic Colors unavailable) -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorOnPrimary">@color/brand_on_primary</item>
        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorOnSecondary">@color/brand_on_secondary</item>
        <!-- Surface/Background default -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Material 3 dialog/toolbar default fonts and shapes come from parent -->
    </style>
</resources>
